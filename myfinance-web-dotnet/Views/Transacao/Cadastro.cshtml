@model TransacaoModel

@{
    ViewData["Title"] = "Cadastro Transação";
}

<div class="text-center">
    <h1 class="display-4">Cadastro de Transacao</h1>
</div>
    <form asp-controller="Transacao" asp-action="Cadastro" method="post">
        <div class="form-control">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" asp-for="Id" placeholder="Id" disabled />
            </div>
            <div class="mb-3">
                <label class="form-label">Historico</label>
                <input type="text" class="form-control" asp-for="Historico" placeholder="Historico"  />
            </div>
            <div class="mb-3">
                <label class="form-label">Data</label>
                <input type="hidden" id="txtId" class="form-control" asp-for="Id">
                <input type="date" class="form-control" asp-for="Data" placeholder="Historico"  />
            </div>

            <div class="mb-3">
                <label class="form-label">Valor</label>
                <input type="text" class="form-control" asp-for="Valor" placeholder="Valor" />
            </div>
            <div class="mb-3">
                <label class="form-label">Item Plano Conta</label>
                @Html.DropDownListFor(m => m.PlanoContaId, Model.PlanoContas,new{@class="form-select"})
            </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary btn-lg">Salvar</button>
            <button type="button" class="btn btn-secondary btn-lg" onclick="Voltar()">Voltar</button>
        </div>
    </form>
    <script>
        function Voltar(){window.location.href = "../Transacao";}
    </script>
</div>


